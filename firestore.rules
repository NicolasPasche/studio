rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get user's role from the 'users' collection
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Lock down user_roles - only readable, not writable by clients
    match /user_roles/{email} {
      allow read: if request.auth != null;
      allow write: if false; // Should be managed from the server/console
    }

    // Users can read/update their own document
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }
    
    // Customers collection for customer management page
    match /customers/{customerId} {
      allow read, write: if getUserRole() in ['sales', 'admin'];
    }

    // Add rules for any other collections as needed.
    // Example:
    // match /leads/{leadId} {
    //   allow read, write: if getUserRole() in ['sales', 'admin', 'proposal'];
    // }
  }
}
